<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_fill">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_fill</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_empty">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:background">@drawable/background_button_empty</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="errorTextColor">@color/secondary_color</item>
        <item name="boxStrokeErrorColor">@color/secondary_color</item>
        <item name="startIconTint">@color/secondary_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">#99001219</item>
    </style>

    <style name="TextInputLayoutPassword" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="errorTextColor">@color/secondary_color</item>
        <item name="boxStrokeErrorColor">@color/secondary_color</item>
        <item name="startIconTint">@color/secondary_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">#99001219</item>
        <item name="startIconDrawable">@drawable/icon_password</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/selector_toggle_show_password</item>
        <item name="passwordToggleTint">@color/secondary_color</item>
    </style>

    <style name="EditTextInTIL">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>