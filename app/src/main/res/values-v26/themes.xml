<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_fill">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_fill</item>
        <item name="android:textSize">@dimen/size_middle</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_empty">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:background">@drawable/background_button_empty</item>
        <item name="android:textSize">@dimen/size_middle</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="errorTextColor">@color/secondary_color</item>
        <item name="boxStrokeErrorColor">@color/secondary_color</item>
        <item name="startIconTint">@color/secondary_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">#99001219</item>
    </style>

    <style name="TextInputLayoutDrop" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="errorTextColor">@color/secondary_color</item>
        <item name="boxStrokeErrorColor">@color/secondary_color</item>
        <item name="startIconTint">@color/secondary_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">#99001219</item>
    </style>

    <style name="TextInputLayoutPassword" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_box_stroke_color</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="errorTextColor">@color/secondary_color</item>
        <item name="boxStrokeErrorColor">@color/secondary_color</item>
        <item name="startIconTint">@color/secondary_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">#99001219</item>
        <item name="startIconDrawable">@drawable/icon_password</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/selector_toggle_show_password</item>
        <item name="passwordToggleTint">@color/secondary_color</item>
    </style>

    <style name="EditTextInTIL">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SeparateLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/spec_color</item>
    </style>

    <style name="ButtonActive">
        <item name="android:background">@drawable/background_button_active</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="ButtonDisactive">
        <item name="android:background">@drawable/background_button_disactive</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/ssp_regular</item>
    </style>

    <style name="SeekBarAudio">
        <item name="haloColor">@color/transparent</item>
        <item name="thumbColor">@color/secondary_color</item>
        <item name="trackColorActive">@color/secondary_color</item>
        <item name="trackColorInactive">@color/spec_color</item>
        <item name="haloRadius">0dp</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbElevation">1dp</item>
        <item name="thumbRadius">0dp</item>
        <item name="trackHeight">2dp</item>
        <item name="android:valueFrom">0</item>
    </style>

    <style name="UNotes.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ssp_bold</item>
        <item name="titleTextColor">@color/secondary_color</item>
    </style>

    <style name="RippleEffect">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_ripple_effect</item>
    </style>

    <style name="TextTabLayoutProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_big</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextTabLayoutHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_middle</item>
        <item name="android:fontFamily">@font/ssp_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicator">@drawable/background_tab_indicator</item>
        <item name="tabIndicatorColor">@color/secondary_color</item>
        <item name="tabRippleColor">@color/secondary_color</item>
        <item name="tabTextAppearance">@style/TextTabLayoutProfile</item>
        <item name="tabTextColor">#99E63946</item>
        <item name="tabSelectedTextColor">@color/secondary_color</item>
    </style>

</resources>