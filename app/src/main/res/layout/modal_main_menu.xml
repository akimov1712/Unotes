<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="100dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/background_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_edit_profile"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/image_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/ssp_semibold"
            android:text="21"
            android:textColor="@color/secondary_color"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/tv_username"
            app:layout_constraintTop_toTopOf="@+id/tv_username" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/ssp_semibold"
            android:text="Ubisoft"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_proffesion"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_proffesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ssp_regular"
            android:text="Game Company"
            android:textColor="@color/secondary_color"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_username"
            app:layout_constraintTop_toBottomOf="@+id/tv_username" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/white"
            android:src="@drawable/icon_edit"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_proffesion"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view4"
        style="@style/SeparateLine"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_edit_profile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_profile"
        android:layout_width="0dp"
        android:layout_marginTop="11dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="13dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/cl_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/cl_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/view4">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ssp_regular"
            android:text="Аккаунт"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_notebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/cl_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile">

        <ImageView
            android:id="@+id/iv_notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_notebook"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ssp_regular"
            android:text="Блокнот"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_notebook"
            app:layout_constraintStart_toEndOf="@+id/iv_notebook"
            app:layout_constraintTop_toTopOf="@+id/iv_notebook" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/cl_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_notebook">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ssp_regular"
            android:text="Категории"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_category"
            app:layout_constraintStart_toEndOf="@+id/iv_category"
            app:layout_constraintTop_toTopOf="@+id/iv_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_write_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/cl_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_category">

        <ImageView
            android:id="@+id/iv_write_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_write_note"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_write_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ssp_regular"
            android:text="Написать пост"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_write_note"
            app:layout_constraintStart_toEndOf="@+id/iv_write_note"
            app:layout_constraintTop_toTopOf="@+id/iv_write_note" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view5"
        style="@style/SeparateLine"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_write_note" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="@+id/cl_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/cl_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/ssp_regular"
            android:text="Выйти"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logout"
            app:layout_constraintStart_toEndOf="@+id/iv_logout"
            app:layout_constraintTop_toTopOf="@+id/iv_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>