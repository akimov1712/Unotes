<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.profile.ProfileFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_notes"
        style="@style/button_fill"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Общая информация"
        app:layout_constraintEnd_toStartOf="@+id/btn_my_data"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_my_data"
        style="@style/button_empty"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="16dp"
        android:text="Мои данные"
        app:layout_constraintBottom_toBottomOf="@+id/btn_show_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_show_notes"
        app:layout_constraintTop_toTopOf="@+id/btn_show_notes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_action"
        style="@style/button_empty"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="16dp"
        android:text="Действие"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_show_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_show_notes"
        app:layout_constraintTop_toTopOf="@+id/btn_show_notes" />

    <FrameLayout
        android:id="@+id/container_profile_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_notes" />

</androidx.constraintlayout.widget.ConstraintLayout>