<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_popular_auhors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Популярные авторы"
            android:textColor="@color/main_color"
            android:fontFamily="@font/ssp_semibold"
            android:textSize="@dimen/size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular_auhors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_popular_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular_auhors" />

        <TextView
            android:id="@+id/tv_new_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Новые заметки"
            android:textColor="@color/main_color"
            android:fontFamily="@font/ssp_semibold"
            android:textSize="@dimen/size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_popular_auhors" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_new_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_note"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_notes" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_new_notes_more"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button_fill"
            android:text="Показать еще"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/ssp_semibold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/rv_new_notes"
            app:layout_constraintStart_toStartOf="@+id/rv_new_notes"
            app:layout_constraintTop_toBottomOf="@+id/rv_new_notes" />

        <TextView
            android:id="@+id/tv_popular_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ssp_semibold"
            android:textSize="@dimen/size_big"
            android:text="Популярные заметки"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_new_notes_more" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_note"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular_notes" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_popular_notes_more"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button_fill"
            android:text="Показать еще"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/ssp_semibold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/rv_popular_notes"
            app:layout_constraintStart_toStartOf="@+id/rv_popular_notes"
            app:layout_constraintTop_toBottomOf="@+id/rv_popular_notes" />

        <TextView
            android:id="@+id/tv_interesting_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ssp_semibold"
            android:textSize="@dimen/size_big"
            android:text="Обсуждаемые заметки"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_popular_notes_more" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_interesting_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_note"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_interesting_notes" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_interesting_notes_more"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/background_button_fill"
            android:fontFamily="@font/ssp_semibold"
            android:text="Показать еще"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rv_interesting_notes"
            app:layout_constraintStart_toStartOf="@+id/rv_interesting_notes"
            app:layout_constraintTop_toBottomOf="@+id/rv_interesting_notes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>